						%ul.nav.pull-right
							-if (!usuario)
								%form.form-search{:action=>"/",:method=>"post"}
									.input-append
										%input{:type=>"text",:name=>"usuario[username]",:placeholder=>"Nombre Usuario"}
										%input{:type=>"hidden",:name=>"usuario[partidas_ganadas]",:value=>"0"}
