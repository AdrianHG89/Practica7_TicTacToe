				%span.icon-bar
			%a.brand{href: ""} Jugo Tic Tac Toe
			.nav-collapse.collapse
				%ul.nav
					%li.divider-vertical
					%li
						%a{href: "/"}
							%i.icon-th.icon-white
							Juego
					%li.divider-vertical
					%li
						%a{href: "/usuarios"}
							%i.icon-list.icon-white
							Ranking
